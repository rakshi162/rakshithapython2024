num_lines = 0
num_words = 0
num_characters = 0
with open('data.txt', 'r') as file:
    for line in file:
        num_lines += 1  
        num_characters += len(line)  
        num_words += len(line.split())  
print(f"Number of lines: {num_lines}")
print(f"Number of words: {num_words}")
print(f"Number of characters: {num_characters}")
